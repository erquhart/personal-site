<body>
  <header>
    <div class="profile-image-container">
      <img class="profile-image" src="{{profile-image}}">
    </div>
    <h1 class="heading-name">{{name}}</h1>
    <p class="heading-description-lead">
      {{heading}}
    </p>
    <p class="heading-description">
      Currently: {{position.title}} @ <a href="{{position.link_address}}">{{position.link_text}}</a>
    </p>
  </header>
  <div class="page-sections">
    <section class="page-section">
      <h2 class="section-heading">
        <span class="section-heading-text">Recent work</span>
      </h2>
      {{#recent_work}}
        <a class="item-link" href="{{link_address}}">
          <p class="item-heading">{{heading}}</p>
          <p class="item-description">{{description}}</p>
        </a>
      {{/recent_work}}
    </section>
    <section class="page-section">
      <h2 class="section-heading">
        <span class="section-heading-text">Contact</span>
      </h2>
      <a class="item-link" href="mailto:shawn@erquh.art">
        <p class="contact-item-main">shawn@erquh.art</p>
      </a>
      <a class="item-link-minor" href="https://twitter.com/erquhart">
        <div data-icon="ei-sc-twitter" data-size="m"></div>
      </a>
      <a class="item-link-minor" href="https://github.com/erquhart">
        <div data-icon="ei-sc-github" data-size="m"></div>
      </a>
      <a class="item-link-minor" href="https://linkedin.com/in/erquhart">
        <div data-icon="ei-sc-linkedin" data-size="m"></div>
      </a>
    </section>
  </div>

  <script src="https://unpkg.com/evil-icons@1.9.0/assets/evil-icons.min.js"></script>
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>
